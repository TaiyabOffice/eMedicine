@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_LayoutLogIn.cshtml";
}
<div class="body">
    <div class="TestBody">
        <div class="navbar navbar-custom" style="padding:20px 0px 0px 20px">
            <a class="navbar-brand logo-image"><img src="~/images/logo.svg" alt="alternative"></a>
            <label style="font-size:32px;font-family:'Times New Roman';font-weight:bold;color:white;margin-right:32px;padding:20px 0px 0px 20px" class="pull-right">CPM</label>
        </div>
        <div class="container">
            <div class="col-md-12">
                <div class="row ">
                    <div class="col-md-8">
                    </div>
                    <div class="col-md-3">
                        <div>
                            <label id="lblMessage" style="color: red;font-style: italic"></label>
                        </div>
                        <div class="login-wrap">
                            <h3 class="text-center" style="color: #fff; margin-top: 10px;"><b>Sign In</b></h3>
                            <form class="signin-form ">
                                <div class="form-group">
                                    <span class="fa fa-user field-icon" style="color:#2596be;"></span>
                                    <input type="text" id="txtUserName" class="form-control" placeholder="User Name" autocomplete="off" required>
                                </div>
                                <div class="form-group">
                                    <span class="fa fa-lock field-icon" style="color:#2596be;"></span>
                                    <a class="fa fa-eye-slash field-icon2" style="color:#2596be;cursor:pointer;" onclick="LoginHelper.ShowPassword('txtPassword', this)"></a>
                                    <input id="txtPassword" type="password" class="form-control" autocomplete="off" placeholder="Password" required>
                                </div>
                                <button type="button" class="btn form-control" id="btnLogin" style="color: #2596be; background-color: white;"> Sign In <i class="fa fa-sign-in"></i> </button>
                            </form>
                        </div>
                    </div>
                    <div class="col-md-1">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="overlay">
        <div class="loadingBack">
        </div>
        <div class="loadingBlock">
            <div class="block"></div>
            <div class="block"></div>
            <div class="block"></div>
            <div class="block"></div>
            <label style="text-align:center;font-size:16px;">Authenticating...</label>
            <label style="text-align: center; margin-top: 95px; font-size: 16px ">Please Wait</label>
        </div>
    </div>
</div>
@section scripts {
    <script src="~/js/LogIn/LogIn.js"></script>
}