@{
    ViewBag.Title = "Entry Generics Information";
    Layout = "~/Views/Shared/_NewTopLayout.cshtml";
}

<section class="content">
    <div class="box box-solid box-primary">
        <div class="box-body">        
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12"> 
                        <div class="box box-solid box-primary">
                            <div class="box-header">
                                <h3 class="box-title">User List</h3>
                            </div>
                            <div class="box-body" style="border-left: 1px solid #d2d6de; border-right: 1px solid #d2d6de;">
                                <table id="tblUser" class="table table-striped table-bordered" cellspacing="0" style="width: 100%; font-size: 10px;">
                                    <thead>
                                        <tr>
                                            <th>SL</th>
                                            <th>User ID</th>
                                            <th>User Name</th>
                                            <th>Email</th>
                                            <th>Phone</th>
                                            <th>District</th>
                                            <th>Upazila</th>
                                            <th>Status</th>                                            
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <!-- Data will be populated here dynamically using jQuery or other data fetching methods -->
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {   
    <script src="~/Scripts/eMedicine/Registration/UIUserList.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
}

<div class="modal fade" id="modal-default">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="mdlTitle"></h4>
            </div>
            <div class="modal-body" >
                <div class="row">
                    <div class="col-md-12">
                        <table>
                            <tr>
                                <td id="MdlName"></td>
                                <td id="MdlNameBN"></td>
                            </tr>
                            <tr>
                                <td id="MdlDescription"></td>
                                <td id="MdlDescriptionBN"></td>
                            </tr>
                            <tr>
                                <td id="MdlIndications"></td>
                                <td id="MdlIndicationsBN"></td>
                            </tr>
                            <tr>
                                <td id="MdlContraindications"></td>
                                <td id="MdlContraindicationsBN"></td>
                            </tr>
                            <tr>
                                <td id="MdlTherapeuticClass"></td>
                                <td id="MdlTherapeuticClassBN"></td>
                            </tr>
                            <tr>
                                <td id="MdlSideEffects"></td>
                                <td id="MdlSideEffectsBN"></td>
                            </tr>
                            <tr>
                                <td id="MdlPrecautions"></td>
                                <td id="MdlPrecautionsBN"></td>
                            </tr>
                            <tr>
                                <td id="MdlInteractions"></td>
                                <td id="MdlInteractionsBN"></td>
                            </tr>                           
                        </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-danger pull-right" data-dismiss="modal">Close</button>               
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
