<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        <header class="main-header">
            <!-- Logo -->
            <a href="/CommonDashBoard/RequsitionDashBoard" class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini"><b>PIMS</b></span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg"><b>PIMS</b></span>
            </a>
            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">                     
                        <li class="dropdown user user-menu">                           
                            <a class="dropdown-toggle" data-toggle="dropdown">@ViewBag.UserName</a>

                            <ul class="dropdown-menu">
                                <!-- User image -->
                                <li class="user-header">
                                    @*<img src="@Url.content("~/content/dist/img/user2-160x160.jpg")" class="img-circle" alt="User Image">*@
                                    <p>
                                        @ViewBag.UserName
                                        <small>Login ID: @ViewBag.UserloginId</small>
                                    </p>
                                </li>                               
                                <li class="user-footer">
                                  
                                    <div class="pull-right">
                                        <a href="~/LogIn/LogIn" class="btn btn-default btn-flat">Sign out</a>
                                    </div>
                                </li>
                            </ul>
                        </li>                       
                    </ul>
                </div>
            </nav>
        </header>
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel -->
                <div class="user-panel">
                    <div class="pull-left image">
                        @*<img src="@Url.content("~/content/dist/img/user2-160x160.jpg")" class="img-circle" alt="User Image">*@

                    </div>                  
                </div>
                @{
                    var menuLists = ViewBag.MenuData as List<MenuViewModel>;
                    List<MenuViewModel> GetChildMenus(string parentId) =>
                    menuLists?.Where(m => m.ParentID == parentId)
                    .OrderBy(m => m.MenuSequenceNo)
                    .ToList() ?? new List<MenuViewModel>();

                    void RenderMenu(List<MenuViewModel> menus)
                    {
                        if (menus == null || !menus.Any())
                            return;

                        @foreach (var menu in menus)
                        {
                            var children = GetChildMenus(menu.MenuID);
                            <li class="@(children.Any() ? "treeview" : "nav-link")">
                                <a href="@menu.PageUrl" class="#">
                                    <i class="@(children.Any() ? "fa fa-laptop" : "fa fa-circle-o")"></i>
                                    <span>
                                        @menu.MenuName
                                        @if (children.Any())
                                        {
                                            <i class="fa fa-angle-left pull-right"></i>
                                        }
                                    </span>
                                </a>
                                <ul class="@(children.Any() ? "treeview-menu" : "")">
                                    @if (children.Any())
                                    {
                                        RenderMenu(children);
                                    }
                                </ul>
                            </li>
                        }
                    }
                }
                <ul class="sidebar-menu" data-widget="tree">
                    @if (menuLists != null)
                    {
                        var rootMenus = menuLists
                        .Where(m => m.ParentID == "0")
                        .OrderBy(m => m.MenuSequenceNo)
                        .ToList();
                        RenderMenu(rootMenus);
                    }
                    else
                    {
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <p>No menu items available</p>
                            </a>
                        </li>
                    }
                </ul>

            </section>
            <!-- /.sidebar -->
        </aside>
        <!-- content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- content Header (Page header) -->
            <section class="content-header">
                <h1>
                    <small>
                        @ViewBag.Title
                    </small>
                </h1>
            </section>
            @RenderBody()
            <hr />
        </div>
    </div>

