@using System.Data
@using Newtonsoft.Json
@using eMedicineAdmin.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <link rel="icon" href="@Url.Content("~/images/Concord_Group_of_Companies.jpg")" type="image/gif" sizes="20x20" />

    <link rel="stylesheet" href="~/css/site.min.css" />

    <title>CPM</title>
    <style>
        .form-control {
            font-size: 11px !important;
            height: 28px;
            padding: 2px;
        }

        .box-body {
            font-size: 11px !important;
        }

        .select2-results__options {
            font-size: 11px !important;
        }

        .select2-container--default .select2-selection--single {
            padding: 2px;
        }

        .card-header {
            padding: 8px 8px 0px 8px;
        }

        .dataTables_wrapper.form-inline {
            display: block !important;
            flex-direction: column !important;
        }

        /* Target the search input */
        .dataTables_filter input.form-control {
            /* Example overrides to remove form-control effects */
            height: auto !important; /* Reset height */
            padding: 0rem 0rem !important; /* Reset padding */
            display: inline-block !important; /* Reset display */
            /* Add any other necessary overrides */
        }

        /* Target the length menu select dropdown */
        .dataTables_length select.form-control {
            /* Example overrides */
            height: auto !important;
            padding: 0rem 0rem !important;
            display: inline-block !important;
        }

        .dataTables_wrapper .dataTables_paginate .paginate_button {
            padding: 2px 3px;
        }

        label {
            margin-bottom: 4px;
        }
    </style>
</head>
@{
        var userName = Context.Session.GetString("UserName");
        var menuDataJson = Context.Session.GetString("MenuData");
        var base64Image = Context.Session.GetString("Hrimg");

        if (string.IsNullOrEmpty(userName) || userName == "null" || string.IsNullOrEmpty(menuDataJson))
        {
                IgnoreSection("Scripts"); // Prevent Razor section error
                Context.Response.Redirect(Url.Action("LogIn", "LogIn"));
                return;

        }

        ViewBag.UserName = userName;
        ViewBag.UserId = Context.Session.GetString("UserID");
        ViewBag.UserloginId = Context.Session.GetString("UserloginId");
        ViewBag.UserDesig = Context.Session.GetString("UserDesig");
        ViewBag.Terminal = Context.Session.GetString("TermID");
        ViewBag.MenuData = menuDataJson;

        string imageSrc = string.IsNullOrEmpty(base64Image)
                ? "/images/UserIcon.png"
                : $"data:image/jpeg;base64,{base64Image}";

        DataTable MenuData = JsonConvert.DeserializeObject<DataTable>(menuDataJson);
}
<body class="hold-transition sidebar-collapse layout-top-nav">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand-md navbar-light navbar-white">
            @* <div class="container"> *@
            <a href="@Url.Action("Dashboard", "Home")" class="navbar-brand">
                <img src="@Url.Content("~/images/Concord_Group_of_Companies.jpg")" class="brand-image img-circle elevation-3"
                     style="opacity: .8">
                <span class="brand-text" style="text-align:center; font-size:16px">  PROJECT MANAGEMENT</span>
            </a>
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fa fa-bars"></i></a>
            <ul class="order-1 order-md-3 navbar-nav navbar-no-expand ml-auto">
                <li class="nav-item">
                    <a class="nav-link" data-widget="control-sidebar" data-slide="true" href="#" role="button">
                        <small>@ViewBag.UserName</small>
                        <img src="@imageSrc" class="img-circle" alt="User Image" style="height:30px;width:30px;"><small><b> </b></small>
                    </a>
                </li>
            </ul>
            @* </div> *@
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->

        <div class="content-wrapper" id="mainBody">
            <div class="content">
                @* <div class="container"> *@
                <div class="box box-default">
                    <div class="box-body">
                        <div class="col-sm-12">
                            <label>@ViewBag.Title</label>
                        </div>
                        <div class="col-sm-12">
                            <div class="card">
                                <div class="card-body">
                                    @RenderBody()
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                @* </div> *@
            </div>
        </div>
        <!-- /.content -->
        @*<div class="card col-sm-12">
                    <br />
                    @RenderBody()
                </div>*@
    </div>
    <!-- Content Wrapper. Contains page content -->
    <!-- /.content-wrapper -->
    <!-- Control Sidebar -->
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <!-- Brand Logo -->
        <a href="@Url.Action("Dashboard", "Home")" class="brand-link">
            <img src="@Url.Content("~/images/Concord_Group_of_Companies.jpg")"
                 class="brand-image img-circle elevation-3"
                 style="opacity: .8">
            <span class="brand-text font-weight-light">CPM</span>
        </a>
        <!-- Sidebar -->
        <div class="sidebar">
            <!-- Sidebar user (optional) -->
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="image">
                    <img src="@imageSrc" class="img-circle elevation-2" alt="User Image" style="height:30px;width:30px;"><small><b> </b></small>
                </div>
                <div class="info">
                    <a href="#" class="d-block"><small>@ViewBag.UserName</small></a>
                </div>
            </div>

            <!-- Sidebar Menu -->
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                    <!-- Add icons to the links using the .nav-icon class
                    with font-awesome or any other icon font library -->

                    <li class="nav-item has-treeview">
                        @{
                            foreach (DataRow item in MenuData.Rows)
                            {
                                if (item[1].ToString() == "0")
                                {
                                <li class="nav-item has-treeview">
                                    <a href="#" class="nav-link active">
                                        <p>
                                            <i class="fa fa-building-o"></i>
                                            @item[2].ToString()
                                            <i class="right fa fa-angle-left"></i>
                                        </p>
                                    </a>

                                    <ul class="nav nav-treeview">
                                        @foreach (DataRow firstItem in MenuData.Rows)
                                        {
                                            if (firstItem[1].ToString() == item[0].ToString())
                                            {
                                                if (firstItem[4].ToString() != "")
                                                {
                                                    <li class="nav-item">
                                                        <a href="~/@firstItem[4].ToString()" class="nav-link">
                                                            <p><i class="fa fa-cube nav-icon"></i>@firstItem[2].ToString()</p>
                                                        </a>
                                                    </li>
                                                }
                                                else
                                                {
                                                    <li class="nav-item has-treeview">
                                                        <a href="#" class="nav-link active">
                                                            <p>
                                                                <i class="fa fa-cubes"></i>
                                                                @firstItem[2].ToString()
                                                                <i class="right fa fa-angle-left"></i>
                                                            </p>
                                                        </a>
                                                        <ul class="nav nav-treeview">

                                                            @foreach (DataRow secondItem in MenuData.Rows)
                                                            {
                                                                if (secondItem[1].ToString() == firstItem[0].ToString())
                                                                {
                                                                    <li class="nav-item" style="color: white;">
                                                                        <a href="~/@secondItem[4].ToString()">
                                                                            <p><i class="fa fa-cube nav-icon"></i>@secondItem[2].ToString()</p>
                                                                        </a>
                                                                    </li>
                                                                }
                                                            }
                                                        </ul>
                                                    </li>
                                                }
                                            }

                                        }


                                    </ul>

                                </li>
                            }

                        }

                    }
                </ul>
            </nav>
            <!-- /.sidebar-menu -->
        </div>
        <center>
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fa fa-arrow-circle-left" style="font-size:24px;"></i></a>
        </center>
        <!-- /.sidebar -->
    </aside>
    <aside class="control-sidebar control-sidebar-light" style="position: absolute;height:auto">
        <center>
            <img src="@imageSrc" style="height:100px;width:100px;" id="ImgUser">
            <p style="margin-top:1px;margin-bottom:1px">@ViewBag.UserName</p>
            <p style="margin-top:1px;margin-bottom:1px"><small>@ViewBag.UserDesig</small></p>
            <p style="margin-top:1px;margin-bottom:1px">
                <small>
                    <i class="fa fa-address-card" aria-hidden="true"></i> @ViewBag.UserloginId
                    <i class="fa fa-desktop" aria-hidden="true"></i> @ViewBag.Terminal
                </small>
            </p>
            <div class="pull-left" style=" margin-left:5px">
                <a href="@Url.Action("ChangeProfile", "LogIn")" class="btn btn-sm bg-teal" title="Change Password">
                    <i class="fa fa-key" aria-hidden="true"></i> Change Passward
                </a>
            </div>
            <div class="pull-right" style=" margin-right:5px">
                <a href="@Url.Action("LogIn", "LogIn")" class="btn btn-sm btn-primary"><i class="fa fa-sign-out" aria-hidden="true"></i> Sign out</a>
            </div>
        </center>
    </aside>
    <footer class="main-footer">
        <div class="pull-right hidden-xs">
            <b>Version</b> 1.0.0
        </div>
        <strong><a href="http://www.concordgroup.net">&copy;@DateTime.Now.Year - Powered By MIS, Concord Group of Companies</a></strong>
    </footer>

    <script src="~/js/site.min.js"></script>

    <script>
        document.getElementById("mainBody").addEventListener("click", function () {
          // Close main sidebar
          document.body.classList.remove("sidebar-open");
          document.body.classList.add("sidebar-collapse");

          // Close control sidebar
          document.body.classList.remove("control-sidebar-slide-open");
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
