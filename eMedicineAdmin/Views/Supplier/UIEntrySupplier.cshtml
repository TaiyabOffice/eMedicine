@{
    ViewBag.Title = "Create Supplier";
    Layout = "~/Views/Shared/_NewTopLayout.cshtml";
}
<div class="row">
    <div class="col-sm-12">
        <div class="box box-solid box-primary" style="margin-top:15px;">
            <div class="box-header">
                <h3 class="box-title">Supplier Information</h3>
            </div>
            <form id="validateCompany">
                <div class="row">
                    <div class="col-sm-2">
                        <label for="txtSupplierId">Supplier Id</label>
                        <input type="text" id="txtSupplierId" name="txtSupplierId" class="form-control input-sm" autocomplete="off" disabled>
                    </div>
                    <div class="col-sm-4">
                        <label for="txtSupplierName">Name</label>
                        <input type="text" id="txtSupplierName" name="txtSupplierName" value="" class="form-control input-sm" autocomplete="off">
                    </div>
                    <div class="col-sm-2">
                        <label for="txtContactPerson">ContactPerson</label>
                        <input type="text" id="txtContactPerson" name="txtContactPerson" value="" class="form-control input-sm" autocomplete="off">
                    </div>
                    <div class="col-sm-2">
                        <label for="txtPhone">Phone</label>
                        <input type="text" id="txtPhone" name="txtPhone" value="" class="form-control input-sm" onkeypress="return SupplierHelper.AllowPhoneNumbersOnly(event)" autocomplete="off">
                    </div>
                    <div class="col-sm-2">
                        <label for="cmbCompanyId">Company</label>
                        <select id="cmbCompanyId" name="cmbCompanyId" class="form-control input-sm select2" style="width:100%"></select>
                    </div>

                </div>
                <div class="row">
                    <div class="col-sm-2">
                        <label for="CmbIsActive">Is Active</label>
                        <select id="CmbIsActive" name="CmbIsActive" class="form-control input-sm select2" style="width:100%">
                            <option value="1">Yes</option>
                            <option value="0">No</option>
                        </select>
                    </div>
                    <div class="col-sm-6">
                        <label for="txtEmail">Email</label>
                        <input type="text" id="txtEmail" name="txtEmail" value="" class="form-control input-sm" autocomplete="off">
                    </div>
                    <div class="col-sm-4" style="margin-top: 21px;">
                        <button id="btnSave" type="button" class="btn btn-success btn-sm">Save Info</button>
                        <button id="btnUpdate" type="button" class="btn btn-warning btn-sm" style="display:none">Update Info</button>
                        <button id="btnClear" type="button" class="btn btn-danger btn-sm">Clear</button>
                    </div>

                </div>
            </form>

        </div>
        <br/>
        <div class="row">
            <div class="col-sm-12">
                <div class="box box-solid box-primary">
                    <div class="box-header bg-info">
                        <h3 class="box-title">Supplier List</h3>
                    </div>
                    <table id="tblSupplier" class="table table-striped table-bordered" cellspacing="0" style="width: 100%; font-size: 10px;">
                        <thead>
                            <tr>
                                <th>SL</th>
                                <th>Supplier ID</th>
                                <th>Supplier Name</th>
                                <th>Contact Person</th>
                                <th>Phone</th>
                                <th>CompanyId</th>
                                <th>Company Name</th>
                                <th>Email</th>
                                <th>Is Active</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Data will be populated here dynamically using jQuery or other data fetching methods -->
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/CommonView/UIEntrySupplier.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/js/apiconnection/api_config.js"></script>
}
