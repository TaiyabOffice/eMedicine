@{
    ViewBag.Title = "Entry Generics Information";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    /*tr:nth-child(even) {
        background-color: #dddddd;
    }*/
</style>
<section class="content">
    <div class="box box-solid box-primary">
        <div class="box-body">
            <input type="hidden" id="hdnUserId" value="@Request.RequestContext.HttpContext.Session["UserID"]">
            <input type="hidden" id="hdnTermID" value="@Request.RequestContext.HttpContext.Session["TerminalId"]">
            <input type="hidden" id="hdnDateToday" value="">
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="box box-solid box-primary" style="margin-top:15px;">
                            <div class="box-header">
                                <h3 class="box-title">Generics Information</h3>
                            </div>

                            <div class="box-body" style="border-left: 1px solid #d2d6de; border-right: 1px solid #d2d6de;">
                                <form id="validateGenerics">
                                    <div class="row">
                                        <div class="form-group">
                                            <div class="col-sm-2">
                                                <label for="txtGenericsId">Generics Id</label>
                                                <input type="text" id="txtGenericsId" name="txtGenericsId" class="form-control input-sm" autocomplete="off" disabled>
                                            </div>
                                            <div class="col-sm-4">
                                                <label for="txtName">Name</label>
                                                <input type="text" id="txtName" name="txtName" value="" class="form-control input-sm" autocomplete="off">
                                            </div>
                                            <div class="col-sm-2">
                                                <label for="txtDescription">Description</label>
                                                <input type="text" id="txtDescription" name="txtDescription" value="" class="form-control input-sm" autocomplete="off">
                                            </div>
                                            <div class="col-sm-2">
                                                <label for="txtIndications">Indications</label>
                                                <input type="text" id="txtIndications" name="txtIndications" value="" class="form-control input-sm" autocomplete="off">
                                            </div>
                                            <div class="col-sm-2">
                                                <label for="txtContraindications">Contraindications</label>
                                                <input type="text" id="txtContraindications" name="txtContraindications" value="" class="form-control input-sm" autocomplete="off">
                                            </div>

                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group">
                                            <div class="col-sm-2">
                                                <label for="txtTherapeuticClass">Therapeutic Class</label>
                                                <input type="text" id="txtTherapeuticClass" name="txtTherapeuticClass" class="form-control input-sm" autocomplete="off">
                                            </div>
                                            <div class="col-sm-4">
                                                <label for="txtSideEffects">Side Effects</label>
                                                <input type="text" id="txtSideEffects" name="txtSideEffects" value="" class="form-control input-sm" autocomplete="off">
                                            </div>
                                            <div class="col-sm-2">
                                                <label for="txtPrecautions">Precautions</label>
                                                <input type="text" id="txtPrecautions" name="txtPrecautions" value="" class="form-control input-sm" autocomplete="off">
                                            </div>
                                            <div class="col-sm-2">
                                                <label for="txtInteractions">Interactions</label>
                                                <input type="text" id="txtInteractions" name="txtInteractions" value="" class="form-control input-sm" autocomplete="off">
                                            </div>
                                            <div class="col-sm-2">
                                                <label for="CmbIsActive">Is Active</label>
                                                <select id="CmbIsActive" name="CmbIsActive" class="form-control input-sm">
                                                    <option value="1">Yes</option>
                                                    <option value="0">No</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group">
                                            <div class="col-sm-4">
                                                <label for="txtNameBN">জেনেরিক নাম</label>
                                                <input type="text" id="txtNameBN" name="txtNameBN" value="" class="form-control input-sm" autocomplete="off">
                                            </div>
                                            <div class="col-sm-4">
                                                <label for="txtDescriptionBN">বর্ণনা</label>
                                                <input type="text" id="txtDescriptionBN" name="txtDescriptionBN" value="" class="form-control input-sm" autocomplete="off">
                                            </div>
                                            <div class="col-sm-2">
                                                <label for="txtIndicationsBN">ইঙ্গিত</label>
                                                <input type="text" id="txtIndicationsBN" name="txtIndicationsBN" value="" class="form-control input-sm" autocomplete="off">
                                            </div>
                                            <div class="col-sm-2">
                                                <label for="txtContraindicationsBN">বিপরীত</label>
                                                <input type="text" id="txtContraindicationsBN" name="txtContraindicationsBN" value="" class="form-control input-sm" autocomplete="off">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group">
                                            <div class="col-sm-2">
                                                <label for="txtTherapeuticClassBN">থেরাপিউটিক ক্লাস</label>
                                                <input type="text" id="txtTherapeuticClassBN" name="txtTherapeuticClassBN" class="form-control input-sm" autocomplete="off">
                                            </div>
                                            <div class="col-sm-4">
                                                <label for="txtSideEffectsBN">পার্শ্ব প্রতিক্রিয়া</label>
                                                <input type="text" id="txtSideEffectsBN" name="txtSideEffectsBN" value="" class="form-control input-sm" autocomplete="off">
                                            </div>
                                            <div class="col-sm-2">
                                                <label for="txtPrecautionsBN">সতর্কতা</label>
                                                <input type="text" id="txtPrecautionsBN" name="txtPrecautionsBN" value="" class="form-control input-sm" autocomplete="off">
                                            </div>
                                            <div class="col-sm-2">
                                                <label for="txtInteractionsBN">মিথষ্ক্রিয়া</label>
                                                <input type="text" id="txtInteractionsBN" name="txtInteractionsBN" value="" class="form-control input-sm" autocomplete="off">
                                            </div>
                                            <div class="col-sm-2" style="margin-top: 25px;">
                                                <button id="btnSave" type="button" class="btn btn-success">Save Info</button>
                                                <button id="btnUpdate" type="button" class="btn btn-success">Update Info</button>
                                                <button id="btnClear" type="button" class="btn btn-danger">Clear</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <div class="box box-solid box-primary">
                            <div class="box-header">
                                <h3 class="box-title">Generics List</h3>
                            </div>
                            <div class="box-body" style="border-left: 1px solid #d2d6de; border-right: 1px solid #d2d6de;">
                                <table id="tblGenerics" class="table table-striped table-bordered" cellspacing="0" style="width: 100%; font-size: 10px;">
                                    <thead>
                                        <tr>
                                            <th>SL</th>
                                            <th>Generics ID</th>
                                            <th>Generics Name</th>
                                            <th>Description</th>
                                            <th>Indications</th>
                                            <th>Contraindications</th>
                                            <th>TherapeuticClass</th>
                                            <th>SideEffects</th>
                                            <th>Precautions</th>
                                            <th>Interactions</th>
                                            <th>Is Active</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <!-- Data will be populated here dynamically using jQuery or other data fetching methods -->
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/Scripts/eMedicine/Generics/UIEntryGenerics.js")
    <script src="~/Scripts/jquery.validate.min.js"></script>
}

<div class="modal fade" id="modal-default">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="mdlTitle"></h4>
            </div>
            <div class="modal-body" >
                <div class="row">
                    <div class="col-md-12">
                        <table>
                            <tr>
                                <td id="MdlName"></td>
                                <td id="MdlNameBN"></td>
                            </tr>
                            <tr>
                                <td id="MdlDescription"></td>
                                <td id="MdlDescriptionBN"></td>
                            </tr>
                            <tr>
                                <td id="MdlIndications"></td>
                                <td id="MdlIndicationsBN"></td>
                            </tr>
                            <tr>
                                <td id="MdlContraindications"></td>
                                <td id="MdlContraindicationsBN"></td>
                            </tr>
                            <tr>
                                <td id="MdlTherapeuticClass"></td>
                                <td id="MdlTherapeuticClassBN"></td>
                            </tr>
                            <tr>
                                <td id="MdlSideEffects"></td>
                                <td id="MdlSideEffectsBN"></td>
                            </tr>
                            <tr>
                                <td id="MdlPrecautions"></td>
                                <td id="MdlPrecautionsBN"></td>
                            </tr>
                            <tr>
                                <td id="MdlInteractions"></td>
                                <td id="MdlInteractionsBN"></td>
                            </tr>                           
                        </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-danger pull-right" data-dismiss="modal">Close</button>               
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
