@{
    //ViewBag.Title = "Ordrs Information";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content">
    <input type="hidden" id="hdnUserId" value="@Request.RequestContext.HttpContext.Session["UserID"]">
    <input type="hidden" id="hdnTermID" value="@Request.RequestContext.HttpContext.Session["TerminalId"]">
    <input type="hidden" id="hdnDateToday" value="@Request.RequestContext.HttpContext.Session["DateToday"]">
    <div class="row">
        <div class="col-sm-12">
            <div class="box box-solid box-primary">
                <div class="box-header">
                    <h3 class="box-title">Orders List</h3>
                </div>
                <div class="box-body" style="border-left: 1px solid #d2d6de; border-right: 1px solid #d2d6de;">
                    <table id="tblOrders" class="table table-striped table-bordered" cellspacing="0" style="width: 100%; font-size: 10px;">
                        <thead>
                            <tr>
                                <th>SL</th>
                                <th>Order ID</th>
                                <th>Order Date</th>
                                <th>Customer Name</th>
                                <th>Customer Phone</th>
                                <th>Order By</th>
                                <th>Sales Person</th>
                                <th>Is Delivered</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/Scripts/eMedicine/Order/UIOrderList.js")
    <script src="~/Scripts/jquery.validate.min.js"></script>
}
<div class="modal fade" id="modal-default">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" id="btnAddNew" class="btn btn-sm btn-success pull-right">Add New</button>
                <h4 class="modal-title" id="mdlTitle"></h4>

            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="box-body" style="border-left: 1px solid #d2d6de; border-right: 1px solid #d2d6de;">
                            <table id="tblOrderDtails" class="table table-striped table-bordered" cellspacing="0" style="width: 100%; font-size: 10px;">
                                <thead>
                                    <tr>
                                        <th>SL</th>
                                        <th>Order ID</th>
                                        <th>Item Id</th>
                                        <th>Name</th>
                                        <th>Unit Price</th>
                                        <th>Qty</th>
                                        <th>Total Amount</th>
                                        <th>Row Id</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th></th>
                                        <th></th>
                                        <th>Total Amount:</th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button"  id ="btnConfirm"class="btn btn-sm btn-success pull-left">Confirm Order</button>              
                <button type="button" class="btn btn-sm btn-danger pull-right" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="modal-AddItem">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">              
                <h4>New Item Add</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="col-sm-2">
                            <input type="text" id="ItemSearch" placeholder="Search Item..." class="form-control">
                        </div>
                        <div class="col-sm-6">
                            <select id="searchResults" name="searchResults" class="form-control input-sm select2" style="width:100%"></select>
                        </div>
                        <div class="col-sm-2">
                            <input type="text" id="txtQty" placeholder=" Qty" class="form-control" autocomplete="off">
                        </div>
                        <div class="col-sm-1">
                            <button type="button" id="btnAddTolIst" class="btn btn-sm btn-primary pull-left">Add To list</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">               
                <button type="button" class="btn btn-sm btn-danger pull-right" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>