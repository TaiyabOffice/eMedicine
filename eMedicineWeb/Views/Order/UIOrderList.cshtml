@{
    //ViewBag.Title = "Ordrs Information";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content">
    <input type="hidden" id="hdnUserId" value="@Request.RequestContext.HttpContext.Session["UserID"]">
    <input type="hidden" id="hdnTermID" value="@Request.RequestContext.HttpContext.Session["TerminalId"]">
    <input type="hidden" id="hdnDateToday" value="@Request.RequestContext.HttpContext.Session["DateToday"]">
    <div class="row">
        <div class="col-sm-12">
            <div class="box box-solid box-primary">
                <div class="box-header">
                    <h3 class="box-title">Orders List</h3>
                </div>
                <div class="box-body" style="border-left: 1px solid #d2d6de; border-right: 1px solid #d2d6de;">
                    <table id="tblOrders" class="table table-striped table-bordered" cellspacing="0" style="width: 100%; font-size: 10px;">
                        <thead>
                            <tr>
                                <th>SL</th>
                                <th>Order ID</th>
                                <th>Order Date</th>
                                <th>Customer Name</th>
                                <th>Customer Phone</th>       
                                <th>Order By</th>                                
                                <th>Sales Person</th>         
                                <th>Is Delivered</th>                                
                                <th>Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/Scripts/eMedicine/Order/UIOrderList.js")
    <script src="~/Scripts/jquery.validate.min.js"></script>

}