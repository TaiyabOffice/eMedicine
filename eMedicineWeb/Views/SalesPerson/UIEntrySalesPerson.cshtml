@{
    ViewBag.Title = "Create Sales Person";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content">
    <div class="box box-solid box-primary">
        <div class="box-body">
            <input type="hidden" id="hdnUserId" value="@Request.RequestContext.HttpContext.Session["UserID"]">
            <input type="hidden" id="hdnTermID" value="@Request.RequestContext.HttpContext.Session["TerminalId"]">
            <input type="hidden" id="hdnDateToday" value="@Request.RequestContext.HttpContext.Session["DateToday"]">
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="box box-solid box-primary" style="margin-top:15px;">
                            <div class="box-header">
                                <h3 class="box-title">Sales Person Information</h3>
                            </div>

                            <div class="box-body" style="border-left: 1px solid #d2d6de; border-right: 1px solid #d2d6de;">
                                <form id="validateCompany">
                                    <div class="row">
                                        <div class="form-group">
                                            <div class="col-sm-2">
                                                <label for="txtSalesPersonId">Sales Person Id</label>
                                                <input type="text" id="txtSalesPersonId" name="txtSalesPersonId" class="form-control input-sm" autocomplete="off" disabled>
                                            </div>
                                            <div class="col-sm-4">
                                                <label for="txtSalesPersonName">Name</label>
                                                <input type="text" id="txtSalesPersonName" name="txtSalesPersonName" class="form-control input-sm" autocomplete="off">
                                            </div>                                            
                                            <div class="col-sm-2">
                                                <label for="txtPhone">Phone</label>
                                                <input type="text" id="txtPhone" name="txtPhone" class="form-control input-sm"  onkeypress="return SalesPersonHelper.AllowPhoneNumbersOnly(event)" autocomplete="off">
                                            </div>
                                            <div class="col-sm-2">
                                                <label for="cmbCompanyId">Company</label>
                                                <select id="cmbCompanyId" name="cmbCompanyId" class="form-control input-sm select2" style="width:100%"></select>
                                            </div>
                                            <div class="col-sm-2">
                                                <label for="CmbIsActive">Is Active</label>
                                                <select id="CmbIsActive" name="CmbIsActive" class="form-control input-sm">
                                                    <option value="1">Yes</option>
                                                    <option value="0">No</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group">
                                            <div class="col-sm-6">
                                                <label for="txtDescription">Description</label>
                                                <input type="text" id="txtDescription" name="txtDescription" class="form-control input-sm" autocomplete="off">
                                            </div> 
                                            <div class="col-sm-4" style="margin-top: 25px;">
                                                <button id="btnSave" type="button" class="btn btn-success" >Save Info</button>
                                                <button id="btnUpdate" type="button" class="btn btn-danger" style="display:none" >Update Info</button>
                                                <button id="btnClear" type="button" class="btn btn-danger">Clear</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <div class="box box-solid box-primary">
                            <div class="box-header">
                                <h3 class="box-title">Sales Person List</h3>
                            </div>
                            <div class="box-body" style="border-left: 1px solid #d2d6de; border-right: 1px solid #d2d6de;">
                                <table id="tblSalesPerson" class="table table-striped table-bordered" cellspacing="0" style="width: 100%; font-size: 10px;">
                                    <thead>
                                        <tr>
                                            <th>SL</th>
                                            <th>Sales Person ID</th>
                                            <th>Sales Person Name</th>                                            
                                            <th>Description</th>
                                            <th>Phone</th>
                                            <th>CompanyId</th>
                                            <th>Company Name</th>
                                            <th>Is Active</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <!-- Data will be populated here dynamically using jQuery or other data fetching methods -->
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/Scripts/eMedicine/SalesPerson/UIEntrySalesPerson.js")
    <script src="~/Scripts/jquery.validate.min.js"></script>
}
