@{
    ViewBag.Title = "Create Shop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content">
    <div class="box box-solid box-primary">
        <div class="box-body">
            <input type="hidden" id="hdnUserId" value="@Request.RequestContext.HttpContext.Session["UserID"]">
            <input type="hidden" id="hdnTermID" value="@Request.RequestContext.HttpContext.Session["TerminalId"]">
            <input type="hidden" id="hdnDateToday" value="@Request.RequestContext.HttpContext.Session["DateToday"]">
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="box box-solid box-primary" style="margin-top:15px;">
                            <div class="box-header">
                                <h3 class="box-title">Shop Information</h3>
                            </div>

                            <div class="box-body" style="border-left: 1px solid #d2d6de; border-right: 1px solid #d2d6de;">
                                <form id="validateCompany">
                                    <div class="row">
                                        <div class="form-group">
                                            <div class="col-sm-2">
                                                <label for="txtShopId">Shop Id</label>
                                                <input type="text" id="txtShopId" name="txtShopId" class="form-control input-sm" autocomplete="off" disabled>
                                            </div>
                                            <div class="col-sm-3">
                                                <label for="txtShopName">Shop Name</label>
                                                <input type="text" id="txtShopName" name="txtShopName" class="form-control input-sm" autocomplete="off">
                                            </div>                                            
                                            <div class="col-sm-3">
                                                <label for="txtOwnerName">Owner Name</label>
                                                <input type="text" id="txtOwnerName" name="txtOwnerName" class="form-control input-sm"  onkeypress="return SalesPersonHelper.AllowPhoneNumbersOnly(event)" autocomplete="off">
                                            </div>
                                            <div class="col-sm-2">
                                                <label for="txtPhone">Phone</label>
                                                <input type="text" id="txtPhone" name="txtPhone" class="form-control input-sm" onkeypress="return SalesPersonHelper.AllowPhoneNumbersOnly(event)" autocomplete="off">
                                            </div>
                                            <div class="col-sm-2">
                                                <label for="CmbIsActive">Is Active</label>
                                                <select id="CmbIsActive" name="CmbIsActive" class="form-control input-sm">
                                                    <option value="1">Yes</option>
                                                    <option value="0">No</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group">
                                            <div class="col-sm-2">
                                                <label for="cmbAreaId">District</label>
                                                <select id="cmbAreaId" name="cmbAreaId" class="form-control input-sm select2" style="width:100%"></select>
                                            </div>
                                            <div class="col-sm-2">
                                                <label for="cmbUpazilasId">Upazila</label>
                                                <select id="cmbUpazilasId" name="cmbUpazilasId" class="form-control input-sm select2" style="width:100%"></select>
                                            </div>
                                            <div class="col-sm-4">
                                                <label for="txtAddress">Address</label>
                                                <input type="text" id="txtAddress" name="txtAddress" class="form-control input-sm" autocomplete="off">
                                            </div>
                                            <div class="col-sm-4" style="margin-top: 25px;">
                                                <button id="btnSave" type="button" class="btn btn-success">Save Info</button>
                                                <button id="btnUpdate" type="button" class="btn btn-warning" style="display:none">Update Info</button>
                                                <button id="btnClear" type="button" class="btn btn-danger">Clear</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <div class="box box-solid box-primary">
                            <div class="box-header">
                                <h3 class="box-title">Shop List</h3>
                            </div>
                            <div class="box-body" style="border-left: 1px solid #d2d6de; border-right: 1px solid #d2d6de;">
                                <table id="tblShop" class="table table-striped table-bordered" cellspacing="0" style="width: 100%; font-size: 10px;">
                                    <thead>
                                        <tr>
                                            <th>SL</th>
                                            <th>Shop ID</th>
                                            <th>Shop Name</th>                                            
                                            <th>Owner Name</th>
                                            <th>Phone</th>
                                            <th>Area Id</th>
                                            <th>Area Name</th>
                                            <th>Address</th>                                         
                                            <th>Is Active</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <!-- Data will be populated here dynamically using jQuery or other data fetching methods -->
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/Scripts/eMedicine/SalesPerson/UIEntryShop.js")
    <script src="~/Scripts/jquery.validate.min.js"></script>
}
